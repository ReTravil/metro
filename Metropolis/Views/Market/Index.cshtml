@model IEnumerable<Metropolis.Models.Market>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Market List</h2>
        </div>
        <div class="col-6 text-right">
            @if (User.IsInRole("admin"))
            {
            <a asp-controller="Market" asp-action="Create" class="btn btn-primary">Create new Market</a>
            }
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
    <div class=" container overflow-hidden">
        <div class="row">
            @foreach (var obj in Model)
                {
            <div class="col-6">
                <div class="card p-3  my-2 border bg-light">
                    <h3>@obj.Address</h3>
                    <h3>@obj.WorkTime</h3>
                    <h3>@obj.City</h3>
                    <h3>@obj.PhoneNumber</h3>
                    <p></p>
                    <div class="w-100 btn-group" role="group">
                        @if (User.IsInRole("admin") || User.IsInRole("moderator"))
                                {
                                     <a asp-controller="Market" asp-action="Update" asp-route-Id="@obj.Id" class="btn btn-primary mx-1 ">Update</a>
                                }
                        @if (User.IsInRole("admin"))
                                {
                                      <a asp-controller="Market" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-1">Delete</a>
                                }
                    </div>
                </div>
            </div>
                }
        </div>
    </div>
    }
    else
    {
        <p>No items created yet</p>
    }

</div>